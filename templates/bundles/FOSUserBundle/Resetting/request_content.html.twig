{% trans_default_domain 'FOSUserBundle' %}

<div class="limiter">
    <div class="container-login100" style="background-image: url('{{asset('assets/home/images/banner.jpg')}}');">
        <div class="wrap-login100">
            <form class="login100-form validate-form" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                <span class="login100-form-logo">
                    <i class="zmdi zmdi-landscape"></i>
                </span>

                <span class="login100-form-title p-b-34 p-t-27">
                    {{ 'resetting.request.submit'|trans }}
                </span>

                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    <input class="input100" id="username" name="username" autocomplete="username" placeholder="{{ 'resetting.request.username'|trans }}">
                    <span class="focus-input100" data-placeholder="&#xf15a;"></span>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" id="_submit" name="_submit" class="login100-form-btn">
                        {{ 'resetting.request.submit'|trans }}
                    </button>
                </div>

                <div class="text-center p-t-90">
                    <a class="txt1 text_sep" href="{{path('home')}}">Accueil</a>
                    <a class="txt1 text_sep" href="{{path('fos_user_security_login')}}">
                        {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


