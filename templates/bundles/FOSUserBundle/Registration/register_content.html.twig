{% trans_default_domain 'FOSUserBundle' %}

<div class="limiter">
    <div class="container-login100" style="background-image: url('{{asset('assets/home/images/banner.jpg')}}');">
        <div class="wrap-login100">
            <span class="login100-form-logo">
                <i class="zmdi zmdi-landscape"></i>
            </span>
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register login100-form validate-form'}}) }}
                <div class="form-error" style="color-red">
                    {{ form_errors(form.username) }}
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    {{ form_widget(form.username, {'attr': {'class': 'input100','placeholder':'Nom d\'utilisateur'}}) }}
                    <span class="focus-input100" data-placeholder="&#xf207;"></span>
                </div>

                <div class="form-error" style="color-red">
                    {{ form_errors(form.email) }}
                </div>
                <div class="wrap-input100 validate-input" data-validate="Entrer l'adresse email">
                    {{ form_widget(form.email, {'attr': {'class': 'input100','placeholder':'Adresse e-mail'}}) }}
                    <span class="focus-input100" data-placeholder="&#xf15a;"></span>
                </div>

                <div class="form-error" style="color-red">
                    {{ form_errors(form.plainPassword.first) }}
                </div>                
                <div class="wrap-input100 validate-input" data-validate="Entrer un mot de passe">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'input100','placeholder':'Mot de passe'}}) }}
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>

                <div class="form-error" style="color-red">
                    {{ form_errors(form.plainPassword.second) }}
                </div>                  
                <div class="wrap-input100 validate-input" data-validate="Entrer un mot de passe de validation">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'input100','placeholder':'Confirmer votre mot de passe'}}) }}
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" id="_submit" name="_submit" class="login100-form-btn">
                        {{ 'registration.submit'|trans }}
                    </button>
                </div>

                <div class="text-center p-t-90">
                    <a class="txt1 text_sep" href="{{path('home')}}">Accueil</a>
                    <a class="txt1 text_sep" href="{{path('fos_user_security_login')}}">
                        {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>


