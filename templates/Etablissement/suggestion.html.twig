{% extends "base.html.twig" %}
{% block ckcss %}
	<link rel="stylesheet" href="{{ asset('assets/ck/ck.css') }}">
	<link rel="stylesheet" href="{{ asset('assets/ck/cknavbar.css') }}">
{% endblock %}
{% block body %}
	<section class="about-banner relative">
		<div class="row" style="margin-top:-15px">
			<div class="s01 col-md-8 col-sm-12">
				<form>
					<div class="inner-form" style="display:flex">
						<div class="input-field">
							<input id="search" type="text" class="black" placeholder="Vous chercher quoi?"/>
						</div>
						<div class="input-field">
							<input id="location" class="black" type="text" placeholder="A proximite de"/>
						</div>
						<div class="input-field third-wrap">
							<button class="btn-search btn btn-default" id="btn-search" type="button">Rechercher</button>
						</div>
					</div>
				</form>
			</div>
			<div class="btn-group col-md-4 col-sm-12" role="group" style="margin-top:23px;">
				<ul class="nav-menu pull-right" style="background-color:#7044028a;">
					{% if is_granted('ROLE_ADMIN') %}
						<li>
							<a href="{{path('admin')}}">Admin</a>
						</li>
					{% endif %}
					{% if is_granted('ROLE_USER') %}
						<li>
							<a href="{{path('fos_user_security_logout')}}" style="font-size:large">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
						</li>
					{% else %}
						<li>
							<a href="{{path('fos_user_security_login')}}" style="font-size:large">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
						</li>
						<li>
							<a href="{{path('fos_user_registration_register')}}" style="font-size:large">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</div>
		<div class="container">
			<div class="row d-flex align-items-center justify-content-center">
				<div class="about-content col-lg-12">
					<h1 class="text-white">
						Resultat de la recherche
					</h1>
				</div>
			</div>
		</div>
	</section>
	{% include "default/cknavbar.html.twig" %}
	<hgroup class="mb20">
		<h1>Resultats de la recherche</h1>
		{# <h2 class="lead">
					<strong class="text-danger">3</strong>
					results were found for the search for
					<strong class="text-danger">Lorem</strong>
				</h2> #}
	</hgroup>

	<section class="col-xs-12 col-sm-6 col-md-12">
		{% if hotel|length > 0 or restaurant|length > 0 or event|length > 0 or recette|length > 0 %}
			{% for h in hotel %}
				<article class="search-result row">
					<div class="col-xs-12 col-sm-12 col-md-3">
						<a href="#" title="Lorem ipsum" class="thumbnail"><img src="http://lorempixel.com/250/140/people" alt="Lorem ipsum"/></a>
					</div>
					{# <div class="col-xs-12 col-sm-12 col-md-2">
									<ul class="meta-search">
										<li>
											<i class="glyphicon glyphicon-calendar"></i>
											<span>02/15/2014</span>
										</li>
										<li>
											<i class="glyphicon glyphicon-time"></i>
											<span>4:28 pm</span>
										</li>
										<li>
											<i class="glyphicon glyphicon-tags"></i>
											<span>People</span>
										</li>
									</ul>
								</div> #}
					<div class="col-xs-12 col-sm-12 col-md-9 excerpet">
						<h3>
							<a href="#" title="">{{h.nom}}</a>
						</h3>
						<p>{{h.description[0:100]}}...</p>
					</div>
					<span class="clearfix borda"></span>
				</article>
			{% endfor %}
		{% endif %}
	</section>
	<br/>
	<h3><span class="clearfix borda"></span></h3>
	{# {% if hotel|length > 0 or restaurant|length > 0 or event|length > 0 or recette|length > 0 %}
		{% for h in hotel %}
			<h3 class="text-blue">{{h.nom}}</h3>
		{% endfor %}
	{% endif %} #}
{% endblock %}
{% block footer %}
	{%include 'default/footer.html.twig'%}
{% endblock %}
{% block ckscript %}
	<script src="{{asset('assets/ck/home/ckHome.js')}}"></script>
{% endblock %}
