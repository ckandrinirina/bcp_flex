{% extends 'base.html.twig' %}

{% block title %}Hotel{% endblock %}

{% block body %}
    <h1>Hotel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hotel.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ hotel.nom }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ hotel.adress }}</td>
            </tr>
            <tr>
                <th>Tel_fixe</th>
                <td>{{ hotel.telFixe }}</td>
            </tr>
            <tr>
                <th>Tel_autre</th>
                <td>{{ hotel.telAutre }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ hotel.email }}</td>
            </tr>
            <tr>
                <th>Site</th>
                <td>{{ hotel.site }}</td>
            </tr>
            <tr>
                <th>Speciality</th>
                <td>{{ hotel.speciality }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ hotel.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hotel.description }}</td>
            </tr>
            <tr>
                <th>Viewers</th>
                <td>{{ hotel.viewers }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('hotel_index') }}">back to list</a>

    <a href="{{ path('hotel_edit', {'id': hotel.id}) }}">edit</a>

    {{ include('hotel/_delete_form.html.twig') }}
{% endblock %}
