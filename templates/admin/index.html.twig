{% extends 'admin_base.html.twig' %}

{% block title %}Dashbard
{% endblock %}

{% block body %}
	<style>
		.margin-botom-10 {
			margin-bottom: 20px;
		}
		.img-list {
			width: 100%;
			height: 227px !important;
		}
	</style>
	<div
		class="col-lg-6 col-6">
		<!-- small box -->
		<div class="small-box bg-warning" style="background-color:#f4f303db">

			<div class="inner">
				<h3>44</h3>

				<p>Nombre de personne connecter</p>
			</div>
			<div class="icon">
				<i class="ion ion-person-add"></i>
			</div>
			<a href="#" class="small-box-footer">
				<i class="fas fa-arrow-circle-right"></i>
			</a>
		</div>
	</div>
	<div
		class="col-lg-6 col-6">
		<!-- small box -->
		<div class="small-box bg-warning" style="background-color:#f4f303db">
			<div class="inner">
				<h3>{{nbrUser}}</h3>
				<p>Nombre d'utilisateur du site</p>
			</div>
			<div class="icon">
				<i class="ion ion-person-add"></i>
			</div>
			<a href="#" class="small-box-footer">
				<i class="fas fa-arrow-circle-right"></i>
			</a>
		</div>
	</div>
	<section class="content">
		<div class="card container">
			<div class="card-header ui-sortable-handle" style="cursor: move;">
				<h3 class="card-title">
					<i class="fas fa-chart-pie mr-1"></i>
					Photos le plus en vue
				</h3>
			</div>
			<!-- /.card-header -->
			<div class="card-body">
				{% set i = 0 %}
				{% for picture in pictures %}
					<div class="col-md-4 margin-botom-10">
						<img src="{{asset(picture.url)}}" class="img-list"/>
					</div>
				{% endfor %}
			</div>
			<!-- /.card-body -->
		</div>
	</section>
{% endblock %}
