{% extends 'admin_base.html.twig' %}

{% block title %}Event index
{% endblock %}

{% block content_header %}
	<h1>
		Evenement
	</h1>
	<ol class="breadcrumb">
		<li>
			<a href="#">
				<i class="fa fa-dashboard"></i>
				liste</a>
		</li>
	</ol>
{% endblock %}


{% block body %}
	<div class="box">
		<div class="box-header">
			<h3 class="box-title">Liste des évenements</h3>
		</div>
		<!-- /.box-header -->
		<div class="box-body">
			<div class="form-group option-table">
				<label>Nombres à afficher</label>
				<select class="form-control">
					<option>1</option>
					<option>2</option>
					<option>3</option>
					<option>4</option>
					<option>5</option>
				</select>
			</div>
			<table class="table table-bordered table-striped" id="datatable">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Presentation</th>
						<th>Date</th>
						<th>Place</th>
						<th class="actionTable">Actions</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
	<a href="{{ path('event_new') }}">Create new</a>
{% endblock %}

{% block script %}
	<script src="{{asset('assets/data/controller/eventCtrl.js')}}"></script>
{% endblock %}
