{% extends 'admin_base.html.twig' %}

{% block title %}Event index
{% endblock %}

{% block content_header %}
	<h1>
		Evenement
	</h1>
	<ol class="breadcrumb">
		<li>
			<a href="#">
				<i class="fa fa-dashboard"></i>
				liste</a>
		</li>
	</ol>
{% endblock %}


{% block body %}
	<div class="box">
		<div class="box-header">
			<h3 class="box-title">Liste des Ã©venements</h3>
		</div>
		<!-- /.box-header -->
		<div class="box-body">
			<div class="row">
				<div class="form-group col-md-4 search-block">
					<input type="text" class="form-control search" placeholder="Rechercher ...">
					<button class="btn btn-default doSearch">
						<i class="fa fa-search"></i>
					</button>
				</div>
				<div class="form-group col-md-2 col-md-offset-6 pull-right">
					<a href="{{ path('event_new') }}" class="btn btn-default">Creer</a>
				</div>
			</div>
			<table class="table table-bordered table-striped" id="datatable">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Presentation</th>
						<th>Date</th>
						<th>Place</th>
						<th class="actionTable">Actions</th>
					</tr>
				</thead>
			</table>
			<div class="pull-right">
				<button class="btn btn-default previous">
					<i class="fa fa-reply"></i>
				</button>
				<button class="btn btn-default next">
					<i class="fa fa-share"></i>
				</button>
			</div>
		</div>
	</div>
{% endblock %}

{% block script %}
	<script src="{{asset('assets/ck/ckdatatable.js')}}"></script>
	<script src="{{asset('assets/data/controller/eventCtrl.js')}}"></script>
{% endblock %}
